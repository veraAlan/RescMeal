<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:paddingBottom="20dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">



        <ImageView
            android:id="@+id/foodListItem_image"
            android:contentDescription="@string/foodlistitem_image_description"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp" />

        <TextView
            android:id="@+id/foodListItem_description"
            android:layout_margin="20dp"
            android:maxWidth="180dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="@string/foodListItem_description"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/foodListItem_image" />

        <TextView
            android:id="@+id/foodListItem_name"
            android:layout_margin="22dp"
            android:textSize="16sp"
            android:paddingBottom="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="@string/foodListItem_food_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/foodListItem_description"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/foodListItem_businessName"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="@string/foodListItem_business_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/foodListItem_name" />

        <TextView
            android:id="@+id/foodListItem_price"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="@string/foodListItem_price"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/foodListItem_description" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/foodListItem_buttonToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_to_cart"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-black"
            app:backgroundTint="#93B5C6"
            app:cornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/foodListItem_businessName" />

        <View
            android:id="@+id/foodLIstItem_separator"
            android:layout_marginTop="5dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0E5CF" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
